{
  "manifest_version": 3,
  "name": "Data sanitizer",
  "version": "0.1.0",
  "description": "Sanitizes images, PDFs, DOCX, MP4, and MP3 by removing metadata.",
  "homepage_url": "https://k00.nl",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Data sanitizer"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_start"
    }
  ]
}
