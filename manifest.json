{
  "manifest_version": 3,
  "name": "K00 Sanitizer",
  "version": "0.1.0",
  "description": "Sanitizes images, PDFs, DOCX, MP4, and MP3 by removing metadata.",
  "homepage_url": "https://k00.nl",
  "browser_specific_settings": {
    "gecko": {
      "id": "k00-sanitizer@k00.nl",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "K00 Sanitizer",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_start"
    }
  ]
}
